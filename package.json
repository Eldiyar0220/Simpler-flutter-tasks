{
  "name": "simpler-flutter-tasks",
  "displayName": "Simpler Flutter Tasks",
  "description": "Flutter quick commands",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flutter-tasks.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "flutter-tasks.pubGet",
        "title": "pub get",
        "icon": "sync"
      },
      {
        "command": "flutter-tasks.pubGets",
        "title": "(FLUTTER TASKS SOON) menu extension",
        "icon": "sync"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "flutter-tasks.pubGet",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        },
        {
          "command": "flutter-tasks.pubGets",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.82.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}

{
  "name": "simpler-flutter-tasks",
  "displayName": "Simpler Flutter Tasks",
  "repository": {
    "type": "git",
    "url": "https://github.com/Eldiyar0220/simpler-flutter-tasks"
  },
  "description": "Flutter quick commands",
  "publisher": "Eldiyar-Dev",
  "version": "0.1.9",
  "icon": "images/eldiyar_profile_icon.png",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Flutter",
    "Dart",
    "Snippets",
    "commands",
    "fast commands"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:flutter-tasks.updateIcons"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flutter-tasks.pubGet",
        "title": "pub get",
        "icon": "sync"
      },
      {
        "command": "flutter-tasks.pubGets",
        "title": "(FLUTTER TASKS SOON) menu extension",
        "icon": "sync"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "flutter-tasks.updateIcons",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        },
        {
          "command": "flutter-tasks.pubGet",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Simpler Flutter Tasks",
      "properties": {
        "myExtension.textColor": {
          "type": "string",
          "default": "#000000",
          "description": "Text color ...SOON will added"
        },
        "SimplerFlutterTasks.isHiddenGitPullIcon": {
          "type": "string",
          "default": "hide",
          "enum": [
            "show",
            "hide"
          ],
          "enumDescriptions": [
            "Git pull icon -> show",
            "Git pull icon -> hide"
          ],
          "description": "Complete boolean with hide or show Icon"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "axios": "^1.5.1",
    "fast-xml-parser": "^4.3.1",
    "vsce": "^2.15.0"
  }
}
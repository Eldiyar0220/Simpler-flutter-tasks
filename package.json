{
  "name": "simpler-flutter-tasks",
  "displayName": "Simpler Flutter Tasks",
  "repository": {
    "type": "git",
    "url": "https://github.com/Eldiyar0220/simpler-flutter-tasks"
  },
  "description": "Flutter quick commands",
  "publisher": "Eldiyar-Dev",
  "version": "0.1.8",
  "icon": "images/eldiyar_profile_icon.png",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js", 
  "contributes": {
    "commands": [
      {
        "command": "flutter-tasks.pubGet",
        "title": "pub get",
        "icon": "sync"
      },
      {
        "command": "flutter-tasks.pubGets",
        "title": "(FLUTTER TASKS SOON) menu extension",
        "icon": "sync"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "flutter-tasks.pubGet",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        },
        {
          "command": "flutter-tasks.pubGets",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "axios": "^1.5.1",
    "fast-xml-parser": "^4.3.1",
    "vsce": "^2.15.0"
  }
}
